{
	"name": "api",
	"version": "0.0.1",
	"description": "jTrack API.",
	"main": "app.ts",
	"scripts": {
		"dev": "pnpm build && concurrently -k -p \"[{name}]\" -n \"TS,API\" -c \"yellow.bold,cyan.bold\" \"pnpm:watch\" \"pnpm:live\"",
		"lint": "eslint",
		"build": "tsc",
		"live": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
		"start": "pnpm build && fastify start -l info dist/app.js",
		"watch": "tsc -w"
	},
	"dependencies": {
		"fastify": "^4.0.0",
		"fastify-plugin": "^4.0.0",
		"@fastify/autoload": "^5.0.0",
		"@fastify/sensible": "^5.0.0",
		"fastify-cli": "^5.6.0"
	},
	"devDependencies": {
		"@types/node": "^18.0.0",
		"@types/tap": "^15.0.5",
		"ts-node": "^10.4.0",
		"concurrently": "^7.0.0",
		"tap": "^16.1.0",
		"typescript": "^4.5.4",
		"eslint-config-jtrack": "workspace:*",
		"ts-config-jtrack": "workspace:*"
	}
}
